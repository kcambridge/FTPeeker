@model IEnumerable<FTPeeker.Models.Entities.FTPK_FTPs>

@{
    ViewBag.Title = "Index";
}

<h2>FTP Sites</h2>
<!--
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
-->
<br />
<br />
<div class="container">
    @if (Model.Count() > 0)
    {
        <table class="table">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Browse",new { id=item.ID })">@Html.DisplayFor(modelItem => item.DisplayName)</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <h4>No FTP sites available. For access, submit a request using the <a href="http://support.barneys.com">help link</a></h4>
    }
   

</div>
